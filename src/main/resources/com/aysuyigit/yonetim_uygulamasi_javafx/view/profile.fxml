<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<AnchorPane xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.aysuyigit.yonetim_uygulamasi_javafx.controller.ProfileController">

    <VBox spacing="20" alignment="CENTER" AnchorPane.topAnchor="50.0" AnchorPane.leftAnchor="50.0" AnchorPane.rightAnchor="50.0" style="-fx-background-color: #f4f4f4; -fx-padding: 40px 30px; -fx-border-radius: 15px; -fx-effect: dropshadow(gaussian, #bdc3c7, 10, 0, 0, 20);">

        <!-- Profil Başlığı -->
        <Label text="Profil Bilgileri" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2c3e50; -fx-padding: 0 0 20px 0;"/>

        <!-- Profil Bilgileri Kutusu -->
        <VBox spacing="20" alignment="CENTER" style="-fx-background-color: #ffffff; -fx-padding: 30px; -fx-border-radius: 10px; -fx-effect: dropshadow(gaussian, #7f8c8d, 15, 0, 0, 10); -fx-min-width: 300px; -fx-max-width: 400px;">

            <HBox spacing="15" alignment="CENTER_LEFT">
                <Label text="Ad Soyad:" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #34495e;"/>
                <Label fx:id="usernameField" style="-fx-font-size: 18px; -fx-font-weight: normal; -fx-text-fill: #7f8c8d;"/>
            </HBox>

            <HBox spacing="15" alignment="CENTER_LEFT">
                <Label text="E-posta:" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #34495e;"/>
                <Label fx:id="emailField" style="-fx-font-size: 18px; -fx-font-weight: normal; -fx-text-fill: #7f8c8d;"/>
            </HBox>

            <HBox spacing="15" alignment="CENTER_LEFT">
                <Label text="Rol:" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #34495e;"/>
                <Label fx:id="roleField" style="-fx-font-size: 18px; -fx-font-weight: normal; -fx-text-fill: #7f8c8d;"/>
            </HBox>

        </VBox>


    </VBox>

</AnchorPane>
